@using InventoryManager.Application.Services
@using InventoryManager.Domain.Entities
<div class="container">
    <div class="row">

        @foreach (var warehouse in _warehouses)
        {
            <div class="col-6 container-cards">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@warehouse.Name</h5>
                        <p class="card-text">@warehouse.Address</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@inject WarehouseService WineryService;
@code {

    private List<Warehouse> _warehouses = new();

    protected override async Task OnInitializedAsync()
    {
        _warehouses = await WineryService.ItemList();
    }

}