@page "/product/delete/{id:int}"
@using InventoryManager.Application.Services;
@using InventoryManager.Domain.Entities
@inject NavigationManager NavManager;

<div class="list-products-action-container">
    <div class="container-fluid card list-products-action-form mt-5 p-5">
            <div class="row">
            <div class="col-12 list-products-action-form-header">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-trash3 me-3 ms-3" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                    </svg>
                </div>
            </div>
                <div>
                    <h1 class="mt-3 mb-3">Delete product</h1>
                </div>
                <div class="col-12 list-products-action-form-subcontainer">
                    <p> <strong class="pe-4">Reference:</strong>@_product.Id</p>
                    <p> <strong class="pe-4">Name:</strong>@_product.Name</p>
                    <p class="list-products-delete-warning">Are you sure you want to delete this product?</p>
                        <EditForm Model="_product">
                            <div class="pe-3">
                                <a href="/product" class="button btn btn-primary">Cancel</a>
                            </div>
                            <div>
                                <button type="button" class="btn btn-danger" @onclick="DeleteProduct">Delete product</button>
                            </div>
                        </EditForm>
                </div>
            </div>
        </div>
</div>
@inject ProductService ProductService;
@code {

    [Parameter]
    public int id { get; set; }

    private Product _product = new();

    protected override async Task OnInitializedAsync()
    {
        _product = await ProductService.Item(id);
    }

    private async void DeleteProduct()
    {
        await ProductService.DeleteItem(_product);
        NavManager.NavigateTo("/product");
    }
}
